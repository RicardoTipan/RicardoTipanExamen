<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RicardoTipanExamen.MainPage">

    <StackLayout>

        <ImageButton Grid.Row="3" Grid.Column="0" 
                    Source="https://c0.klipartz.com/pngpicture/914/805/gratis-png-pizza-hamburguesa-logotipo-hamburguesa-comida-rapida-pollo-frito-pizza-comida-rapida-thumbnail.png
"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"/>

        <Frame  Padding="10" CornerRadius="0">
            <Label Text="Menu Restaurante Buen Apetito" HorizontalTextAlignment="Center" TextColor="#12A06B" FontSize="Small" AutomationProperties.IsInAccessibleTree="False"/>
        </Frame>

        <Label Text="Ingrese Usuario " FontSize="20" FontAttributes="Bold" TextColor="#070c0f"/>
        <Entry x:Name="txtUsu" Keyboard="Default" Placeholder="Usuario" HorizontalTextAlignment="Center"/>
        

        <Label Text="Ingrese Contraseña" FontSize="20" FontAttributes="Bold" TextColor="#070c0f"/>
        <Entry x:Name="txtCon" Keyboard="Default" Placeholder="Contraseña" HorizontalTextAlignment="Center"
               IsPassword="True"/>

        <Button x:Name="btnIng" Text="Ingresar" 
                    Clicked="btnIng_Clicked" BackgroundColor="#47F4A6" TextColor="#0051ba" FontSize="15" FontAttributes="Bold"/>



    </StackLayout>

</ContentPage>
