<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RicardoTipanExamen.MainPage">

    <StackLayout>

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"
               HeightRequest="50" />
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Registro de Estudiantes y Pagos" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Ingrese Usuario " FontSize="20" FontAttributes="Bold" TextColor="#070c0f"/>
        <Entry x:Name="txtUsu" Keyboard="Default" Placeholder="Usuario" HorizontalTextAlignment="Center"/>
        

        <Label Text="Ingrese Contraseña" FontSize="20" FontAttributes="Bold" TextColor="#070c0f"/>
        <Entry x:Name="txtCon" Keyboard="Default" Placeholder="Contraseña" HorizontalTextAlignment="Center"
               IsPassword="True"/>

        <Button x:Name="btnIng" Text="Ingresar" 
                    Clicked="btnIng_Clicked" BackgroundColor="#f4ed47" TextColor="#0051ba" FontSize="15" FontAttributes="Bold"/>



    </StackLayout>

</ContentPage>
